{
  "displayName": "${database_id}-db",
  "mosaicLayout": {
    "columns": 48,
    "tiles": [
      {
        "width": 16,
        "height": 16,
        "widget": {"alertChart": {"name": "${alert_policy_name["db_disk"]}"}}
      },
      {
        "xPos": 16,
        "width": 16,
        "height": 16,
        "widget": {"alertChart": {"name": "${alert_policy_name["db_cpu"]}"}}
      },
      {
        "xPos": 32,
        "width": 16,
        "height": 16,
        "widget": {"alertChart": {"name": "${alert_policy_name["db_ram"]}"}}
      },
      {
        "yPos": 16,
        "width": 16,
        "height": 16,
        "widget": {
          "title": "Connections | ${database_id}",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"cloudsql.googleapis.com/database/postgresql/num_backends\" resource.type=\"cloudsql_database\" resource.label.\"database_id\"=\"${database_id}\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": ["metric.label.\"database\""]
                    }
                  }
                },
                "plotType": "STACKED_BAR",
                "legendTemplate": "$${metric.labels.database}",
                "minAlignmentPeriod": "60s"
              }
            ]
          }
        }
      },
      {
        "xPos": 16,
        "yPos": 16,
        "width": 16,
        "height": 16,
        "widget": {
          "title": "Disk IO | ${database_id}",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"cloudsql.googleapis.com/database/disk/read_ops_count\" resource.type=\"cloudsql_database\" resource.label.\"database_id\"=\"${database_id}\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM"
                    }
                  }
                },
                "plotType": "LINE",
                "legendTemplate": "Read",
                "minAlignmentPeriod": "60s"
              },
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"cloudsql.googleapis.com/database/disk/write_ops_count\" resource.type=\"cloudsql_database\" resource.label.\"database_id\"=\"${database_id}\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM"
                    }
                  }
                },
                "plotType": "LINE",
                "legendTemplate": "Write",
                "minAlignmentPeriod": "60s"
              }
            ]
          }
        }
      },
      {
        "xPos": 32,
        "yPos": 16,
        "width": 16,
        "height": 16,
        "widget": {
          "title": "Network IO | ${database_id}",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"cloudsql.googleapis.com/database/network/sent_bytes_count\" resource.type=\"cloudsql_database\" resource.label.\"database_id\"=\"${database_id}\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM"
                    }
                  }
                },
                "plotType": "LINE",
                "legendTemplate": "Read",
                "minAlignmentPeriod": "60s"
              },
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"cloudsql.googleapis.com/database/network/received_bytes_count\" resource.type=\"cloudsql_database\" resource.label.\"database_id\"=\"${database_id}\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM"
                    }
                  }
                },
                "plotType": "LINE",
                "legendTemplate": "Write",
                "minAlignmentPeriod": "60s"
              }
            ]
          }
        }
      },
      {
        "yPos": 32,
        "width": 16,
        "height": 16,
        "widget": {
          "title": "Deadlocks | ${database_id}",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"cloudsql.googleapis.com/database/postgresql/deadlock_count\" resource.type=\"cloudsql_database\" resource.label.\"database_id\"=\"${database_id}\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": ["resource.label.\"database_id\""]
                    }
                  }
                },
                "plotType": "STACKED_AREA",
                "legendTemplate": "$${resource.labels.database_id}",
                "minAlignmentPeriod": "60s"
              }
            ]
          }
        }
      }
    ]
  }
}
